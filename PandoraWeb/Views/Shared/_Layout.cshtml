<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pandora Box</title>
    <!--Add bootstrap-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript">
        var domain = '@Request.Url.Scheme://@Request.Url.Authority';
    </script>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <!--Add bootstrap-->
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <!--NAV-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" id="logo" style="cursor:pointer">Pandora Box</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" style="cursor:pointer" aria-current="page" id="moveToHome">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Puzzles
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#">Puzzle 1</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 2</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 3</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 4</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 5</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 6</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 7</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 8</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 9</a></li>
                            <li><a class="dropdown-item" href="#">Puzzle 10</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--NAV-->
    @RenderBody()
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
            $("#moveToHome").click(function () {
        window.location = '@Url.Action("Index","Home")';
            })
            $("#logo").click(function () {
        window.location = '@Url.Action("Index","Home")';
    })

    </script>
</body>
</html>
