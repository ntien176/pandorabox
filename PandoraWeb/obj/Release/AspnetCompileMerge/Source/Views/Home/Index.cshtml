<script type="text/javascript">
    $("#moveToPuzzle1").click(function () {
        localStorage.setItem("step", "0");
        window.location = '@Url.Action("Index","Puzzle")';
    })
    $("#continueGame").click(function () {
        var step = localStorage.getItem("step");
        switch (step) {
            case "0":
                window.location = '@Url.Action("Index","Puzzle")';
                break;
            case "1":
                window.location = '@Url.Action("Puzzle2", "Puzzle")';
                break;
            case "2":
